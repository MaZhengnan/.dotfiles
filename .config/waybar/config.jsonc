        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": "ÔÇú"
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">Ôåä {}</span>"
    },
    "sway/scratchpad": {
        "format": "{icon} {count}",
